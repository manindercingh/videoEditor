<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="140dp"
    android:background="@android:color/transparent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginHorizontal="15dp"
        android:background="@drawable/dialog_background">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="@dimen/_20sdp"
            android:text="Are you sure you want to delete"
            android:textColor="@color/white" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:orientation="horizontal">

            <RelativeLayout
                android:id="@+id/crdCancel"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content">

                <soup.neumorphism.NeumorphCardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_on_view"
                    app:neumorph_lightSource="rightBottom"
                    app:neumorph_shadowColorDark="#454343"
                    app:neumorph_shadowColorLight="@color/black"
                    app:neumorph_shadowElevation="4dp"
                    app:neumorph_shapeAppearance="@style/Custom.Neumorph.CardView">

                    <androidx.appcompat.widget.AppCompatButton
                        android:layout_width="wrap_content"
                        android:layout_height="22dp"
                        android:background="@drawable/bg_button"
                        android:id="@+id/btnCancel"
                        android:text="Cancel"
                        android:textAllCaps="false"
                        android:textColor="@color/white"
                        android:textSize="11sp" />

                </soup.neumorphism.NeumorphCardView>


            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/crdDeleteItem"
                android:layout_width="wrap_content"
                android:padding="10dp"
                android:layout_height="wrap_content">

            <soup.neumorphism.NeumorphCardView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_30sdp"
                android:background="@drawable/bg_on_view"
                app:neumorph_lightSource="rightBottom"
                app:neumorph_shadowColorDark="#454343"
                app:neumorph_shadowColorLight="@color/black"
                app:neumorph_shadowElevation="4dp"
                app:neumorph_shapeAppearance="@style/Custom.Neumorph.CardView">

                <androidx.appcompat.widget.AppCompatButton
                    android:layout_width="wrap_content"
                    android:id="@+id/btnDelete"
                    android:layout_height="22dp"
                    android:background="@drawable/bg_button"
                    android:backgroundTint="@color/red"
                    android:text="Delete"
                    android:textAllCaps="false"
                    android:textColor="@color/white"
                    android:textSize="11sp" />

            </soup.neumorphism.NeumorphCardView>
            </RelativeLayout>

        </LinearLayout>

    </RelativeLayout>


</RelativeLayout>